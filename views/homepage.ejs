<div ng-app="PBJ" ng-controller="AppCtrl">

  <div class="cursor-land">

    <div class="cursor"
         ng-repeat="cursor in cursors"
         ng-click="clickOnOtherCursor(cursor.id)"
         ng-style="cursor.style">
      <p ng-if="cursor.chat">
        <br/>
        <span>{{cursor.chat}}</span>
        <div class="repo-list" ng-show="cursor.reposVisible">
          <ul>
            <em ng-if="cursor.reposLoading">loading repos</em>
            <em ng-if="cursor.repos.length==0 && !cursor.reposLoading">No repos or unrecognized GitHub username.</em>
            <li ng-if="!cursor.reposLoading" ng-repeat="repo in cursor.repos | limitTo: 5"><a href="{{repo.url}}">{{repo.name}}</a></li>
          </ul>
        </div>
      </p>
    </div>



    <!-- <span class="my-cursor" ng-class="{'moving': myCursor.moving}"
          ng-style="myCursor.style">
      â–¼
    </span> -->

  </div>


  <!-- chat input -->
  <textarea
    placeholder="type your username."
    ng-model="myCursor.chat"
    ng-keyup="typeInChatBox($event)"
    ng-class="{'saying': myCursor.chat}">
  </textarea>

</div>

